<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
   xmlns="http://java.sun.com/xml/ns/j2ee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
   version="2.4">

	<display-name>Kavalok Red5 application</display-name>

	<context-param>
	    <param-name>globalScope</param-name>
	    <param-value>default</param-value>
	</context-param>

    <!-- Removed parent context reference for Red5 1.0.2 compatibility -->
    <!-- <context-param>
        <param-name>parentContextKey</param-name>
        <param-value>default.context</param-value>
    </context-param> -->

	<listener>
		<listener-class>org.red5.server.war.WarLoaderServlet</listener-class>
	</listener>

    <!-- remove the following servlet tags if you want to disable remoting for this application -->
    <servlet>
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>fork</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>xpoweredBy</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>development</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>useSystemClassLoaderAsParent</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>logVerbosityLevel</param-name>
            <param-value>DEBUG</param-value>
        </init-param>
        <init-param>
            <param-name>classpath</param-name>
            <param-value>WEB-INF/classes</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <!-- The mapping for the JSP servlet -->
    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jspx</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>paypalipn</servlet-name>
        <servlet-class>com.kavalok.billing.paypal.servlet.PaypalIPNServlet</servlet-class>
    </servlet>

	<servlet-mapping>
        <servlet-name>paypalipn</servlet-name>
        <url-pattern>/paypalipn</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>trpr</servlet-name>
        <servlet-class>com.kavalok.billing.transaction.TransactionProcessorServlet</servlet-class>
    </servlet>

	<servlet-mapping>
        <servlet-name>trpr</servlet-name>
        <url-pattern>/trpr</url-pattern>
    </servlet-mapping>

<!--	<servlet>-->
<!--        <servlet-name>gateway</servlet-name>-->
<!--        <servlet-class>org.red5.server.net.servlet.AMFGatewayServlet</servlet-class>-->
<!--    </servlet>-->

<!--    <servlet-mapping>-->
<!--        <servlet-name>gateway</servlet-name>-->
<!--        <url-pattern>/gateway</url-pattern>-->
<!--    </servlet-mapping>-->

    <servlet>
        <servlet-name>XmlRpcServlet</servlet-name>
        <servlet-class>org.apache.xmlrpc.webserver.XmlRpcServlet</servlet-class>
        <init-param>
          <param-name>enabledForExtensions</param-name>
          <param-value>true</param-value>
          <description>
            Sets, whether the servlet supports vendor extensions for XML-RPC.
          </description>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>XmlRpcServlet</servlet-name>
        <url-pattern>/xmlrpc</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>XmlRpcAuthFilter</filter-name>
        <filter-class>com.kavalok.xmlrpc.XmlRpcAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>XmlRpcAuthFilter</filter-name>
        <url-pattern>/xmlrpc</url-pattern>
    </filter-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Forbidden</web-resource-name>
            <url-pattern>/streams/*</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>

</web-app>
